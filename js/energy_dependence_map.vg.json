{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "EU Energy Imports Dependence",
  "width": 600,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/SctMccoll/Week-9-Homework/main/Data/Energy_Dependence_Time.csv"
  },
  "params": [
    {
      "name": "year",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-9-Homework/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_5"
        }
      },
      "projection": {
        "type": "conicEqualArea",
        "center": [ 15, 51 ],
        "parallels": [ 40, 65 ],
        "scale": 860
      },
      "mark": {
        "type": "geoshape",
        "fill": "None",
        "stroke": "lightgray"
      },
      "encoding": {
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-9-Homework/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'EU data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "projection": {
        "type": "conicEqualArea",
        "center": [ 15, 51 ],
        "parallels": [ 40, 65 ],
        "scale": 860
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "COUNTRY",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/Week-9-Homework/main/js/EU.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_50m_admin_0_countries"
              }
            },
            "key": "properties.ADM0_A3_BR",
            "fields": [ "properties", "type", "geometry" ]
          }
        },
        { "filter": "datum.YEAR==year" },
        {
          "calculate": "if(datum.PC_DEP!=null,max(datum.PC_DEP/100,-1),null)",
          "as": "Energy dependence"
        },
        {
          "calculate": "if(datum.PC_DEP!=null,datum.PC_DEP/100,null)",
          "as": "Tooltip Dependence"
        }
      ],

      "projection": {
        "type": "conicEqualArea",
        "center": [ 15, 51 ],
        "parallels": [ 40, 65 ],
        "scale": 860
      },
      "mark": {"type": "geoshape","stroke": "white"},
      "encoding": {
        "color": {
          "field": "Energy Dependence",
          "type": "quantitative",
          "scale": {
            "scheme": "blueorange",
            "type": "linear",
            "domain": [ -1, 1 ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Tooltip Dependence",
            "type": "quantitative",
            "format": ".1%",
            "title": "Energy Import Dependence"
          }
        ]
      }
    }

  ]
}