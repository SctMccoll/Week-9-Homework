{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "EU Energy Dependency",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://github.com/SctMccoll/Week-9-Homework/blob/8a3d2a1411089a4096cf2af62c0032c0aa14eff9/js/EU.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_0_countries"
    }
  },

  "projection": { "type": "equalEarth" },

  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/data/covid_10_10_2020.csv"
            },
            "key": "Country",
            "fields": [ "Active" ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Active",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [ 10000, 100000, 500000 ],
            "range": [ "#fdbe85", "#fd8d3c", "#e6550d", "#a63603" ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Active",
            "type": "quantitative"
          }
        ]
      }
    }
  ]

}